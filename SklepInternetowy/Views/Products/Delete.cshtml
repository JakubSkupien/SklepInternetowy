@model SklepInternetowy.Models.Product

<h2>Usuń Produkt</h2>
<p>Czy na pewno chcesz usunąć ten produkt?</p>

<p><strong>Nazwa:</strong> @Model.Name</p>
<p><strong>Cena:</strong> @Model.Price.ToString("C")</p>
<p><strong>Opis:</strong> @Model.Description</p>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Usuń</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Anuluj</a>
</form>
